<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="16dp"
    android:background="@color/white">

    <!-- Campus Image -->
    <ImageView
        android:id="@+id/campusImage"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        android:src="@drawable/campus_image" 
        android:layout_marginBottom="16dp"/>

    <!-- App Description -->
    <TextView
        android:id="@+id/appDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to Campus Navigation App! Explore buildings, rooms, and grounds with ease."
        android:textSize="18sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_below="@id/campusImage"
        android:layout_marginBottom="32dp"/>

    <!-- Enter Button -->
    <Button
        android:id="@+id/enterButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter"
        android:textSize="18sp"
        android:backgroundTint="@color/purple_500"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/appDescription"
        android:padding="16dp"
        android:layout_marginBottom="16dp"/>

</RelativeLayout>